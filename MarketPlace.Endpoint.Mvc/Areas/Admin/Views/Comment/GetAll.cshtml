@using MarketPlace.Domain.Core.Application.Dtos;
@using MarketPlace.Domain.Core.Application.Enums;
@model List<CommentDto>;


<div class="tab-content" id="orders-table-tab-content">
    <div class="tab-pane fade show active" id="orders-all" role="tabpanel" aria-labelledby="orders-all-tab">
        <div class="app-card app-card-orders-table shadow-sm mb-5  p-2">
            <div class="app-card-body">
                <div class="table-responsive">
                    <table class="table app-table-hover mb-0 text-left">
                        <thead>
                            <tr>
                                <th class="cell">آیدی</th>
                                <th class="cell">بدنه</th>
                                <th class="cell">نام کالا</th>
                                <th class="cell">نام غرفه</th>
                                <th class="cell">آیدی خریدار</th>
                                <th class="cell">وضعیت</th>
                                <th class="cell"></th>
                                <th class="cell"></th>
                                <th class="cell"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var comment in Model)
                            {
                                <tr id="@comment.Id">
                                    <td class="cell">#@comment.Id</td>
                                    <td class="cell">@comment.Description</td>
                                    <td class="cell">@comment.ProductName</td>
                                    <td class="cell">@comment.BoothName</td>
                                    <td class="cell">@comment.CustomerId</td>
                                    <td class="cell">@comment.Status</td>
                                    <td class="cell"><a class="btn-sm app-btn-secondary"  asp-action="Edit" asp-route-id="@comment.Id">ویرایش</a></td>
                                    @if(comment.Status != GeneralStatus.Failed)
                                    {
                                        <td class="cell"><a class="btn-sm app-btn-secondary"  asp-action="Fale" asp-route-id="@comment.Id">رد</a></td>
                                    }
                                    @if(comment.Status != GeneralStatus.Confirmed)
                                    {
                                        <td class="cell"><a class="btn-sm app-btn-secondary"  asp-action="Confirm" asp-route-id="@comment.Id">تایید</a></td>
                                    }
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>

    </div>

</div>
