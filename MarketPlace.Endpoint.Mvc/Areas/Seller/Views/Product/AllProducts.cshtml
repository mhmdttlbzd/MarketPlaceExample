@using MarketPlace.Domain.Core.Application.Dtos;
@using MarketPlace.Domain.Core.Application.Enums;
@model List<ProductOutputDto>;



<div class="tab-content" id="orders-table-tab-content">
    <div class="tab-pane fade show active" id="orders-all" role="tabpanel" aria-labelledby="orders-all-tab">
        
        <div class="app-card app-card-orders-table shadow-sm mb-5  p-2">
            <h4 class="mb-4">محصول خود را انتخاب کنید</h4>
            <hr />
            <div class="app-card-body">
                <div class="table-responsive">
                    <table class="table app-table-hover mb-0 text-left">
                        <thead>
                            <tr>
                                <th class="cell">آیدی</th>
                                <th class="cell">نام</th>
                                <th class="cell">آیدی دسته بندی</th>
                                <th class="cell">وضعیت</th>
                                <th class="cell"></th>
                                <th class="cell"></th>
                                <th class="cell"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr id="@product.Id">
                                    <td class="cell">#@product.Id</td>
                                    <td class="cell">@product.Name</td>
                                    <td class="cell">@product.CategoryId</td>
                                    <td class="cell">@product.Status</td>
                                    <td class="cell"><a class="btn-sm app-btn-secondary" asp-controller="Product" asp-action="CreateAuction" asp-route-Id="@product.Id" asp-route-Name="@product.Name">مزایده</a></td>
                                    <td class="cell"><a class="btn-sm app-btn-secondary" asp-controller="Product" asp-action="CreateBoothProduct" asp-route-Id="@product.Id" asp-route-Name="@product.Name">قیمت مقطوع</a></td>
  
                                </tr>
                            }
                        </tbody>
                    </table>
                </div><!--//table-responsive-->

            </div><!--//app-card-body-->
        </div><!--//app-card-->

    </div><!--//tab-pane-->

</div><!--//tab-content-->


