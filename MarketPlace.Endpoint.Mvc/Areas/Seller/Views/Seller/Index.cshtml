                        <h4 class="app-card-title">اضافه کردن محصول به غرفه</h4>
                    </div><!--//col-->
                </div><!--//row-->
            </div><!--//app-card-header-->
            <div class="app-card-footer p-4 mt-auto me-auto">
                <a class="py-2 px-3 app-btn-secondary" asp-controller="Product" asp-action="AllProducts">اضافه کردن</a>
            </div><!--//app-card-footer-->
        </div><!--//app-card-->
    </div><!--//col-->
</div>
<div class="row">
    <div class="col-12">
        <!-- Shopping Summery -->
        <table class="table shopping-summery">
            <tbody>
                @foreach (var auction in Model.Auctions)
                {
                    string path = "/images/" + auction.PicturePath;
                    string nPath = "/images/notFound.png";
                    <tr class="d-flex px-4 mb-3">
                        <td class="image td-flex" data-title="No">
                            @if (auction.PicturePath != null)
                            {
                                <div class="app-card-thumb">
                                    <img class="thumb-image " src="@path" alt="@auction.PictureAlt">
                                </div>
                            }
                            else
                            {
                                <div class="app-card-thumb">
                                    <img class="thumb-image" src="@nPath" alt="">
                                </div>
                            }
                        </td>
                        <td class="product-des w-75 td-flex" data-title="Description">
                            <p class="product-name"><a href="#">@auction.ProductName</a></p>
                            <p class="product-des me-3">@auction.Description</p>
                        </td>
                        <td class="price  td-flex" data-title="Price"><span>$@auction.LastPrice </span></td>

                        <td class="total-amount td-flex" data-title="Total"><span>@auction.ExpiredTime.ToPersianString()</span></td>
                        <td class="action td-flex" data-title="Remove"><a asp-controller="Product" asp-action="DeleteAuction" asp-route-id="@auction.Id"><i class="fas fa-trash-alt"></i></a></td>
                        <td class="action td-flex" data-title="Remove"><a href="#"><i class="fas fa-pen"></i></a></td>
                    </tr>
                }

            </tbody>
        </table>
        <!--/ End Shopping Summery -->
    </div>
</div>
