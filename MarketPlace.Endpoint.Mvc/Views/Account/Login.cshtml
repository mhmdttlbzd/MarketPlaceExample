
<div class="app app-login p-0 fixed-top">
	<div class="row g-0 app-auth-wrapper">
		<div class="col-12 col-md-7 col-lg-6 auth-main-col text-center p-5">
			<div class="d-flex flex-column align-content-end">
				<div class="app-auth-body mx-auto">
					<div class="app-auth-branding mb-4"><a class="app-logo" href="index.html"><img class="logo-icon me-2" src="~/images/app-logo.svg" alt="logo"></a></div>
					<h2 class="auth-heading text-center mb-5">ورود به حساب کاربری</h2>
					<div class="auth-form-container text-start">
						<form class="auth-form login-form" asp-page-handler="Login">
							<div style="text-align: center;" asp-validation-summary="All" class="text-danger"></div>

							<div class="email mb-3">
								<label class="sr-only" for="signin-email">ایمیل</label>
								<input id="signin-email" name="Email" type="email" class="form-control signin-email" placeholder="ایمیل" required="required">
							</div><!--//form-group-->
							<div class="password mb-3">
								<label class="sr-only" for="signin-password">رمز عبور</label>
								<input id="signin-password" name="Password" type="password" class="form-control signin-password" placeholder="رمز عبور" required="required">
								<div class="extra mt-3 row justify-content-between">
									<div class="col-6">
										<div class="form-check">
											<input class="form-check-input" type="checkbox" value="" id="RememberPassword">
											<label class="form-check-label" for="RememberMe">
												به خاطر بسپار
											</label>
										</div>
									</div><!--//col-6-->
									<div class="col-6">
										<div class="forgot-password text-end">
											<a href="reset-password.html">رمزتان را فراموش کردید؟</a>
										</div>
									</div><!--//col-6-->
								</div><!--//extra-->
							</div><!--//form-group-->
							<div class="text-center">
								<button type="submit" class="btn app-btn-primary w-100 theme-btn mx-auto">ورود</button>
							</div>
						</form>

						<div class="auth-option text-center pt-5">حسابی ندارید؟<a class="text-link" asp-action="RegisterAsCustomer">اینجا کلیک کنید.</a></div>
					</div><!--//auth-form-container-->

				</div><!--//auth-body-->
			</div><!--//flex-column-->
		</div><!--//auth-main-col-->
		<div class="col-12 col-md-5 col-lg-6 h-100 auth-background-col">
			<div class="auth-background-holder">
			</div>
			<div class="auth-background-mask"></div>

		</div><!--//auth-background-col-->

	</div><!--//row-->


</div>