<div class="app app-signup p-0 fixed-top">
    <div class="row g-0 " style="background-color:#fff">
        <div class="col-12 col-md-7 col-lg-6 auth-main-col text-center">
            <div class="d-flex flex-column align-content-end">
                <div class="app-auth-body mx-auto">
                    <div class="app-auth-branding mb-4">
                        <a class="app-logo" href="index.html">
                            <img style="width: 60px;height: 60px;" class="logo-icon me-2" src="~/images/app-logo.svg" alt="logo">
                        </a>
                    </div>
                    <h2 class="auth-heading text-center mb-4">ورورد به عنوان خریدار</h2>

                    <div class="auth-form-container text-end mx-auto">
                        <form asp-action="RegisterAsCustomer" class="auth-form auth-signup-form">
                            <div class="email mb-3">
                                <label class="sr-only" for="signup-email">Your Name</label>
                                <input id="signup-name" name="Name" type="text" class="form-control signup-name" placeholder="نام" required="required">
                            </div>  
                            <div class="email mb-3">
                                <label class="sr-only" for="signup-email">Your Name</label>
                                <input id="signup-name" name="Family" type="text" class="form-control signup-name" placeholder="نام خانوادگی" required="required">
                            </div>
                            <div class="email mb-3">
                                <label class="sr-only" for="Email">Your Email</label>
                                <input id="signup-email" name="Email" type="email" class="form-control signup-email" placeholder="ایمیل" required="required">
                            </div>
                            <div class="password mb-3">
                                <label class="sr-only" for="signup-password">Password</label>
                                <input id="signup-password" name="Password" type="password" class="form-control signup-password" placeholder="رمز عبور" required="required">
                            </div>

                            @await Component.InvokeAsync("AddressVM")

                            <div class="text-center">
                                <button type="submit" class="btn app-btn-primary w-100 theme-btn mx-auto">Sign Up</button>
                            </div>
                        </form><!--//auth-form-->
                        <div class="auth-option text-center pt-3 mb-5">حساب دارید؟<a class="text-link" asp-action="Login">اینجا کلیک کنید.</a></div>

                    </div><!--//auth-form-container-->



                </div><!--//auth-body-->

            </div><!--//flex-column-->
        </div><!--//auth-main-col-->
    </div><!--//row-->

</div>
<div class="app app-signup p-0 fixed-top " style=" right:50%">
    <div class="col-12 col-md-5 col-lg-6 h-100 auth-background-col ">
        <div class="auth-background-holder">
        </div>
        <div class="auth-background-mask"></div>
        <div class="auth-background-overlay p-3 p-lg-5">
            <div class="d-flex flex-column align-content-end h-100">
                <div class="h-100"></div>
                <div class="overlay-content p-3 p-lg-4 rounded">
                    <h5 class="mb-3 overlay-title">به مارکت آنلاین ما خوش آمدید</h5>
                    <div>فروشگاهی برای خریداران با سلیقه و فروشندگان با تعهد.</div>
                </div>
            </div>
        </div><!--//auth-background-overlay-->
    </div><!--//auth-background-col-->
</div>