@using MarketPlace.Domain.Core.Application.Dtos;
@model List<CommentRequestDto>;



    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">

            <div class="tab-content" id="orders-table-tab-content">
                <div class="tab-pane fade show active" id="orders-all" role="tabpanel" aria-labelledby="orders-all-tab">
                    <div class="app-card app-card-orders-table shadow-sm mb-5">
                        <div class="app-card-body">
                            <div class="table-responsive">
                                <table class="table app-table-hover mb-0 text-left">
                                    <thead>
                                        <tr>
                                            <th class="cell">آیدی</th>
                                            <th class="cell">بدنه</th>
                                            <th class="cell">نام کالا</th>
                                            <th class="cell">نام غرفه</th>
                                            <th class="cell">آیدی خریدار</th>
                                            <th class="cell"></th>
                                            <th class="cell"></th>
                                            <th class="cell"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var comment in Model)
                                        {
                                            <tr id="@comment.Id">
                                                <td class="cell">#@comment.Id</td>
                                                <td class="cell">@comment.Description</td>
                                                <td class="cell">@comment.ProductName</td>
                                                <td class="cell">@comment.BoothName</td>
                                                <td class="cell">@comment.CustomerId</td>
                                                <td class="cell"><a class="btn-sm app-btn-secondary" onclick="Confirm(@comment.Id)" href="#">تایید</a></td>
                                                <td class="cell"><a class="btn-sm app-btn-secondary" onclick="Fale(@comment.Id)" href="#">رد</a></td>
                                                <td class="cell"><a class="btn-sm app-btn-secondary" asp-controller="Comment" asp-action="Edit" asp-route-id="@comment.Id">ویرایش</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div><!--//table-responsive-->

                        </div><!--//app-card-body-->
                    </div><!--//app-card-->

                </div><!--//tab-pane-->

            </div><!--//tab-content-->



        </div><!--//container-fluid-->
    </div><!--//app-content-->




<script>
    function Confirm(id) {
        $.ajax({
            type: "patch",
            url: `/Requests/ConfirmComment/` + id,
            data: { id: id },
            dataType: "JSON",
            
        });
        DeletTr(id);
    }
    function Fale(id) {
        $.ajax({
            type: "patch",
            url: `/Requests/FaleComment/` + id,
            data: { id: id },
            dataType: "JSON",
        });
        DeletTr(id);
    }
    function DeletTr(id) {
        $(`#` + id).remove();
    }
</script>
